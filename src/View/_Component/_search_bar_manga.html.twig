<form action="/manga/search?q={{ query }}" method="get" class="mt-3">
    <label for="Search anime" class="mb-2"><span class="fs-4 title">Search Manga</span></label>
    <input class="form-control me-2" type="text" placeholder="Search" name="query" aria-label="Search">


    <div class="d-flex flex-column">

        <button class=" btn btn-warning mt-2" type="submit">Search</button>
    </div>

</form>
