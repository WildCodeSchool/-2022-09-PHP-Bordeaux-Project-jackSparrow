{% extends 'layout.html.twig' %}
{% block title %}
	{{parent()}}:{{articles.title}}
{% endblock %}

{% block content %}

	<div class="container-md mt-4">
		<div class="title container-fluid p-2">
			<h1 class="button_all_title text-center mb-4 display-1">{{block('title')}}</h1>
		</div>

		<div class="row  mx-auto">


			<div class="col-12 col-xl-6">
				<div class="card  mt-2 ">
					<div class="row">
						<div class="col-6">
							<img src="{{articles.picture ? articles.picture : "/assets/images/default_article.png/"}}" class="card-img-top w-100 h-100 p-4" alt="..." style="height:15em">


						</div>
						<div class="col-6 mt-4">
							<h2>{{articles.title}}</h2>


							<a href="#" class="mt-2 btn btn-warning">
								{{(articles.date) ? articles.date : "not start"}}


							</a>

							<a href="#" class="mt-2 btn btn-warning">
								<b>author:</b>
								{{(articles.author) ? articles.author : "author:not author"}}


							</a>


						</div>


					</div>


					<div class="card-body m-2 text-light rounded opacity-50">


						{{articles.content|raw}}


					</div>
				</div>
			</div>
			<div class="col-12 col-xl-6">


				{% include "_Component/_comments.html.twig" %}

				{% include "_Component/_stream_episode.html.twig" %}
			</div>
		</div>


	</div>


{% endblock %}
{% block javascript %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


{% endblock %}
