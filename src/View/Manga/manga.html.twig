{% extends "layout.html.twig" %}

{% block title %}
	Manga
{% endblock %}

{% block content %}

	<div class="container-md mt-4">
		<div class="title container-fluid p-2">
			<h1 class="button_all_title text-center mb-4 display-1">{{block('title')}}</h1>

		</div>
		<div class="row mx-auto">


			{% for i in 0..47 %}
				<div class="card w-15 mt-2 col-xl-2 col-md-3 col-sm-6">


					<div class="col-6 col-md-12 col-xl-12">


						<input type="hidden" class="btn btn-primary position-relative">

							<span class="position-absolute top-20 start-20 translate-middle title p-2 mt-4  background-ws-light  rounded-circle">{{manga_list[i].getRank}}</span>

						</input>

						<form action="manga/like?id={{manga_list[i].malId}}" method="post">

							<input type="hidden" class="btn btn-primary position-relative">

								<button type="submit" class="btn  position-absolute   end-0" id="like-anime">


									<p class="heart btn btn-warning ">♥️</p>


								</button>


							</input>
						</form>


						<a href="manga/show?id={{manga_list[i].malId}}" data-toggle="tooltip" data-placement="top" title="{{ manga_list[i].getTitle}}">
							<img src="{{manga_list[i].getImages}}" class="card-img-top mt-2" alt="..." style="height:15em">
						</a>
					</div>

					<div class="card-body">
						<h5 class="card-title">{{ manga_list[i].getTitle|striptags|length > 5 ? manga_list[i].getTitle|striptags|slice(0, 9) ~ '...' : manga_list[i].getTitle|striptags }}</h5>


						<div class="d-flex flex-row bd-highlight align-items-center mb-3">

							<div class="row">
								<a href="#" class="btn btn-warning">
									{{(manga_list[i].startDate) ? manga_list[i].startDate : "not start"}}


								</a>
								<a href="#" class="btn btn-warning mt-2">Volumes:
									{{(manga_list[i].getVolumes) ? manga_list[i].getVolumes: "no..."}}


								</a>

							</div>
						</div>


					</div>


				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
{% block javascript %}
	<script src="{{ ROOT_URL }}/assets/js/carrousel.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


{% endblock %}
