{% extends "layout.html.twig" %}


{% block content %}


<table class="table  table-hover background-ws-dark">

	<thead>

		<tr class="title">
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Mail</th>
			<th scope="col">Admin</th>
			<th scope="col">Delete user</th>

		</tr>
	</thead>
	<tbody>
		{% for user in users %}
			{% include "Admin/modal_delete_user.html.twig" %}

			<tr class="text-light">
				<th scope="row">{{user.id}}</th>
				<td class="text-light">{{user.name}}</td>

				<td class="text-light">{{user.mail}}</td>

				<td>
					{{ user.isAdmin ? '✔️' : '✖️' }}


				</td>
				<td>


					<a href="{{id}}" name="user.id" value="{{id}}" class="btn btn-danger title" data-bs-toggle="modal" data-bs-target=" #Modal_delete_users">


						⚰️Delete

					</a>

				</td>
			</tr>
		</td>
	</tbody>
</td></tbody></tr></td></tbody></tr>{% endfor %}</tbody></table>{% endblock %}
